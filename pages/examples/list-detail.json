{
  "meta": {
    "version": "1.0.0",
    "title": "List Detail View",
    "description": "Master-detail layout with list and detail panels"
  },
  "template": "TwoColumnLayout",
  "templateProps": {
    "leftWidth": 0.3,
    "gap": 16
  },
  "slots": {
      "header": {
        "type": "HeaderComposite",
        "props": {
          "title": "Employee Directory",
          "subtitle": "View and manage employee information",
          "breadcrumbs": [
            { "label": "Home", "href": "/" },
            { "label": "Employees", "href": "/employees" }
          ],
          "showBackButton": true,
          "actions": [
            { "id": "add", "label": "Add Employee", "variant": "primary" }
          ]
        }
      },
      "left": {
        "type": "Card",
        "props": {
          "variant": "outlined",
          "padding": "md"
        },
        "children": [
          {
            "type": "Stack",
            "props": {
              "spacing": 1
            },
            "children": [
              {
                "type": "Card",
                "props": {
                  "variant": "outlined",
                  "padding": "sm",
                  "interactive": true,
                  "hover": true
                },
                "children": [
                  {
                    "type": "Text",
                    "props": {
                      "children": "John Doe"
                    }
                  }
                ]
              },
              {
                "type": "Card",
                "props": {
                  "variant": "outlined",
                  "padding": "sm",
                  "interactive": true,
                  "hover": true
                },
                "children": [
                  {
                    "type": "Text",
                    "props": {
                      "children": "Jane Smith"
                    }
                  }
                ]
              },
              {
                "type": "Card",
                "props": {
                  "variant": "outlined",
                  "padding": "sm",
                  "interactive": true,
                  "hover": true
                },
                "children": [
                  {
                    "type": "Text",
                    "props": {
                      "children": "Bob Johnson"
                    }
                  }
                ]
              },
              {
                "type": "Card",
                "props": {
                  "variant": "outlined",
                  "padding": "sm",
                  "interactive": true,
                  "hover": true
                },
                "children": [
                  {
                    "type": "Text",
                    "props": {
                      "children": "Alice Williams"
                    }
                  }
                ]
              }
            ]
          }
        ]
      },
      "right": {
        "type": "Card",
        "props": {
          "title": "Employee Details",
          "padding": "lg"
        },
        "children": [
          {
            "type": "Text",
            "props": {
              "children": "Select an employee from the list to view their details."
            }
          }
        ]
      }
    }
  }