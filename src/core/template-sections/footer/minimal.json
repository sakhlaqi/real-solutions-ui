{
  "id": "footer-minimal",
  "name": "Minimal Footer",
  "category": "footer",
  "version": "1.0.0",
  "description": "Simple footer with logo, copyright, and social links",
  "tags": ["footer", "minimal", "simple"],
  "previewImage": "/previews/footer-minimal.jpg",
  "schema": {
    "type": "object",
    "properties": {
      "logo": {
        "type": "object",
        "properties": {
          "src": {
            "type": "string",
            "description": "Logo image URL"
          },
          "alt": {
            "type": "string"
          },
          "width": {
            "type": "number"
          },
          "height": {
            "type": "number"
          }
        }
      },
      "copyright": {
        "type": "string",
        "description": "Copyright text with year"
      },
      "socialLinks": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "platform": {
              "type": "string",
              "enum": ["twitter", "facebook", "linkedin", "instagram", "youtube", "github"]
            },
            "url": {
              "type": "string"
            },
            "ariaLabel": {
              "type": "string"
            }
          },
          "required": ["platform", "url"]
        }
      },
      "links": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "required": ["text", "url"]
        },
        "description": "Optional inline links (Privacy, Terms, etc.)"
      }
    },
    "required": ["copyright"]
  },
  "defaultProps": {
    "logo": {
      "src": "/logo.svg",
      "alt": "Company Logo",
      "width": 120,
      "height": 40
    },
    "copyright": "© 2026 YourCompany. All rights reserved.",
    "socialLinks": [
      {
        "platform": "twitter",
        "url": "https://twitter.com/yourcompany",
        "ariaLabel": "Follow us on Twitter"
      },
      {
        "platform": "linkedin",
        "url": "https://linkedin.com/company/yourcompany",
        "ariaLabel": "Connect on LinkedIn"
      },
      {
        "platform": "github",
        "url": "https://github.com/yourcompany",
        "ariaLabel": "View our GitHub"
      }
    ],
    "links": [
      {
        "text": "Privacy Policy",
        "url": "/privacy"
      },
      {
        "text": "Terms of Service",
        "url": "/terms"
      }
    ]
  },
  "slots": {
    "logo": {
      "type": "media",
      "editable": true,
      "optional": true
    },
    "copyright": {
      "type": "text",
      "editable": true,
      "maxLength": 100
    },
    "socialLinks": {
      "type": "array",
      "editable": true,
      "optional": true
    },
    "links": {
      "type": "array",
      "editable": true,
      "optional": true
    }
  },
  "layout": {
    "container": "centered",
    "maxWidth": "lg",
    "spacing": {
      "py": { "xs": 4, "sm": 6 }
    },
    "flexDirection": "column",
    "alignItems": "center",
    "gap": 2
  },
  "styling": {
    "borderTop": "1px solid",
    "borderColor": "divider"
  },
  "examples": [
    {
      "name": "Startup Footer",
      "props": {
        "logo": {
          "src": "/brand/logo-white.svg",
          "alt": "Startup Logo",
          "width": 100,
          "height": 32
        },
        "copyright": "© 2026 Startup Inc. Built with ❤️ in San Francisco",
        "socialLinks": [
          {
            "platform": "twitter",
            "url": "https://twitter.com/startup"
          },
          {
            "platform": "github",
            "url": "https://github.com/startup"
          }
        ],
        "links": [
          {
            "text": "Privacy",
            "url": "/privacy"
          },
          {
            "text": "Terms",
            "url": "/terms"
          },
          {
            "text": "Contact",
            "url": "/contact"
          }
        ]
      }
    }
  ]
}
