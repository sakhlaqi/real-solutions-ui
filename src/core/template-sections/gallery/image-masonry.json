{
  "id": "gallery-image-masonry",
  "category": "gallery",
  "name": "Masonry Image Gallery",
  "description": "Pinterest-style masonry layout gallery with variable image heights. Perfect for dynamic content galleries, inspiration boards, and visual storytelling.",
  "schema": {
    "type": "object",
    "properties": {
      "heading": {
        "type": "string",
        "maxLength": 100,
        "description": "Main gallery heading"
      },
      "subheading": {
        "type": "string",
        "maxLength": 200,
        "description": "Optional descriptive text"
      },
      "images": {
        "type": "array",
        "minItems": 1,
        "maxItems": 100,
        "items": {
          "type": "object",
          "required": ["src", "alt"],
          "properties": {
            "src": {
              "type": "string",
              "format": "uri"
            },
            "alt": {
              "type": "string",
              "maxLength": 200
            },
            "title": {
              "type": "string",
              "maxLength": 100
            },
            "rows": {
              "type": "integer",
              "minimum": 1,
              "maximum": 4,
              "default": 1,
              "description": "Height span in rows"
            },
            "cols": {
              "type": "integer",
              "minimum": 1,
              "maximum": 2,
              "default": 1,
              "description": "Width span in columns"
            }
          }
        }
      },
      "columns": {
        "type": "integer",
        "minimum": 2,
        "maximum": 6,
        "default": 3,
        "description": "Number of columns"
      },
      "gap": {
        "type": "number",
        "minimum": 0,
        "maximum": 8,
        "default": 1,
        "description": "Gap between images"
      },
      "enableLightbox": {
        "type": "boolean",
        "default": true
      }
    },
    "required": ["images"]
  },
  "defaultProps": {
    "heading": "Inspiration",
    "subheading": "Discover beautiful visuals",
    "images": [
      {
        "src": "https://images.unsplash.com/photo-1551963831-b3b1ca40c98e",
        "alt": "Breakfast",
