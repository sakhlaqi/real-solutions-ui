{
  "id": "gallery-image-grid",
  "category": "gallery",
  "name": "Image Grid Gallery",
  "description": "Responsive image grid gallery with configurable columns, aspect ratios, and lightbox support. Perfect for portfolios, product showcases, and media libraries.",
  "schema": {
    "type": "object",
    "properties": {
      "heading": {
        "type": "string",
        "maxLength": 100,
        "description": "Main gallery heading"
      },
      "subheading": {
        "type": "string",
        "maxLength": 200,
        "description": "Optional descriptive text below heading"
      },
      "images": {
        "type": "array",
        "minItems": 1,
        "maxItems": 50,
        "items": {
          "type": "object",
          "required": ["src", "alt"],
          "properties": {
            "src": {
              "type": "string",
              "format": "uri",
              "description": "Image URL"
            },
            "alt": {
              "type": "string",
              "maxLength": 200,
              "description": "Alt text for accessibility"
            },
            "title": {
              "type": "string",
              "maxLength": 100,
              "description": "Optional image title"
            },
            "caption": {
              "type": "string",
              "maxLength": 300,
              "description": "Optional caption displayed in lightbox"
            },
            "aspectRatio": {
              "type": "string",
              "enum": ["1:1", "4:3", "16:9", "3:2", "2:3"],
              "default": "4:3"
            }
          }
        },
        "description": "Array of images to display"
      },
      "columns": {
        "type": "object",
        "properties": {
          "xs": {
            "type": "integer",
            "minimum": 1,
            "maximum": 4,
            "default": 1
          },
          "sm": {
            "type": "integer",
            "minimum": 1,
            "maximum": 6,
            "default": 2
          },
          "md": {
            "type": "integer",
            "minimum": 1,
            "maximum": 12,
            "default": 3
          },
          "lg": {
            "type": "integer",
            "minimum": 1,
            "maximum": 12,
            "default": 4
          }
        },
        "description": "Number of columns per breakpoint"
      },
      "gap": {
        "type": "number",
        "minimum": 0,
        "maximum": 8,
        "default": 2,
        "description": "Spacing between images (theme spacing units)"
      },
      "enableLightbox": {
        "type": "boolean",
        "default": true,
        "description": "Enable lightbox on image click"
      },
      "showCaptions": {
        "type": "boolean",
        "default": false,
        "description": "Show captions below images in gallery"
      },
      "loadingStrategy": {
        "type": "string",
        "enum": ["lazy", "eager"],
        "default": "lazy",
        "description": "Image loading strategy"
      }
    },
    "required": ["images"]
  },
