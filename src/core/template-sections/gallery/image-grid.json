  "slots": {
    "heading": {
      "type": "text",
      "editable": true,
      "maxLength": 100,
      "defaultValue": "Gallery"
    },
    "subheading": {
      "type": "text",
      "editable": true,
      "maxLength": 200,
      "defaultValue": "Browse our collection of images"
    },
    "images": {
      "type": "collection",
      "itemType": "image",
      "minItems": 1,
      "maxItems": 50,
      "fields": [
        {
          "name": "src",
          "type": "image",
          "required": true
        },
        {
          "name": "alt",
          "type": "text",
          "required": true,
          "maxLength": 200
        },
        {
          "name": "title",
          "type": "text",
          "maxLength": 100
        },
        {
          "name": "caption",
          "type": "text",
          "maxLength": 300
        },
        {
          "name": "aspectRatio",
          "type": "select",
          "options": ["1:1", "4:3", "16:9", "3:2", "2:3"]
        }
      ]
    }
  },
  "layout": {
    "container": {
      "maxWidth": "lg",
      "paddingX": { "xs": 2, "sm": 3, "md": 4 },
      "paddingY": { "xs": 6, "sm": 8, "md": 10 }
    },
    "grid": {
      "columns": {
        "xs": 1,
        "sm": 2,
        "md": 3,
        "lg": 4
      },
      "spacing": 2
    }
  },
  "styling": {
    "heading": {
      "variant": "h3",
      "component": "h2",
      "gutterBottom": true,
      "align": "center",
      "fontWeight": 700
    },
    "subheading": {
      "variant": "body1",
      "align": "center",
      "color": "text.secondary",
      "marginBottom": 4
    },
    "imageContainer": {
      "position": "relative",
      "overflow": "hidden",
      "borderRadius": 1,
      "transition": "transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out",
      "cursor": "pointer",
      "&:hover": {
        "transform": "scale(1.02)",
        "boxShadow": 3
      }
    },
    "image": {
      "width": "100%",
      "height": "100%",
      "objectFit": "cover",
      "display": "block"
    },
    "caption": {
      "marginTop": 1,
      "variant": "body2",
      "color": "text.secondary",
      "align": "center"
    }
  },
  "interactions": {
    "imageClick": {
      "type": "lightbox",
      "description": "Opens image in lightbox overlay",
      "enabled": true,
      "actions": {
        "navigate": true,
        "zoom": true,
        "download": false
      }
    },
    "keyboardNavigation": {
      "enabled": true,
      "keys": {
        "ArrowLeft": "previousImage",
        "ArrowRight": "nextImage",
        "Escape": "closeLightbox"
      }
    }
  },
  "accessibility": {
    "ariaLabels": {
      "gallery": "Image gallery",
      "image": "Gallery image",
      "lightbox": "Image viewer",
      "previous": "Previous image",
      "next": "Next image",
      "close": "Close viewer"
    },
    "keyboardSupport": true,
    "focusManagement": true,
    "announcements": {
      "imageChange": "Viewing image {current} of {total}",
      "lightboxOpen": "Image viewer opened",
      "lightboxClose": "Image viewer closed"
    }
  },
