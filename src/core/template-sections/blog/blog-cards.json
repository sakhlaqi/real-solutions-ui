  "slots": {
    "heading": {
      "type": "text",
      "label": "Section Heading",
      "required": true,
      "maxLength": 100
    },
    "subheading": {
      "type": "text",
      "label": "Section Subheading",
      "required": false,
      "maxLength": 200
    },
    "posts": {
      "type": "collection",
      "label": "Blog Posts",
      "required": true,
      "itemLabel": "Post",
      "minItems": 1,
      "maxItems": 12,
      "fields": [
        {
          "name": "title",
          "type": "text",
          "label": "Post Title",
          "required": true,
          "maxLength": 200
        },
        {
          "name": "description",
          "type": "textarea",
          "label": "Post Description",
          "required": true,
          "maxLength": 500
        },
        {
          "name": "image",
          "type": "image",
          "label": "Featured Image",
          "required": true
        },
        {
          "name": "category",
          "type": "text",
          "label": "Category",
          "required": true
        },
        {
          "name": "authors",
          "type": "collection",
          "label": "Authors",
          "itemLabel": "Author",
          "fields": [
            {
              "name": "name",
              "type": "text",
              "label": "Author Name"
            },
            {
              "name": "avatar",
              "type": "image",
              "label": "Author Avatar"
            }
          ]
        },
        {
          "name": "date",
          "type": "date",
          "label": "Publication Date"
        },
        {
          "name": "readTime",
          "type": "text",
          "label": "Read Time"
        },
        {
          "name": "url",
          "type": "url",
          "label": "Post URL",
          "required": true
        }
      ]
    }
  },
  "layout": {
    "container": {
      "maxWidth": "lg",
      "spacing": 4
    },
    "grid": {
      "spacing": 2,
      "columns": 12
    },
    "responsive": {
      "xs": {
        "columns": 12,
        "spacing": 2
      },
      "sm": {
        "columns": 6,
        "spacing": 2
      },
      "md": {
        "columns": 4,
        "spacing": 3
      },
      "lg": {
        "columns": 4,
        "spacing": 3
      }
    }
  },
  "styling": {
    "heading": {
      "variant": "h1",
      "gutterBottom": true
    },
    "subheading": {
      "variant": "body1",
      "color": "text.secondary"
    },
    "card": {
      "height": "100%",
      "display": "flex",
      "flexDirection": "column"
    },
    "cardMedia": {
      "aspectRatio": "16/9",
      "borderBottom": "1px solid",
      "borderColor": "divider"
    },
    "cardContent": {
      "flexGrow": 1,
      "padding": 2
    },
    "category": {
      "variant": "caption",
      "component": "div",
      "gutterBottom": true
    },
    "title": {
      "variant": "h6",
      "component": "div",
      "gutterBottom": true
    },
    "description": {
      "variant": "body2",
      "color": "text.secondary",
      "gutterBottom": true,
      "overflow": "hidden",
      "textOverflow": "ellipsis",
      "display": "-webkit-box",
      "WebkitLineClamp": 3,
      "WebkitBoxOrient": "vertical"
    },
    "author": {
      "display": "flex",
      "alignItems": "center",
      "gap": 1,
      "padding": "16px"
    },
    "avatarGroup": {
      "max": 3
    },
    "avatar": {
      "width": 24,
      "height": 24
    },
    "metadata": {
      "variant": "caption",
      "color": "text.secondary"
    }
  },
  "interactions": {
    "cardHover": {
      "enabled": true,
      "effect": "elevation",
      "transition": "all 0.3s ease"
    },
    "cardClick": {
      "enabled": true,
      "action": "navigate",
      "target": "url"
    },
    "imageHover": {
      "enabled": true,
      "effect": "scale",
      "scale": 1.05,
      "transition": "transform 0.3s ease"
    }
  },
  "accessibility": {
    "cardRole": "article",
    "headingLevel": "h2",
    "imageAlt": "required",
    "linkAriaLabel": "Read full article: {title}"
  },
