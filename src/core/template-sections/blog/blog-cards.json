{
  "id": "blog-cards",
  "name": "Blog Cards Grid",
  "category": "blog",
  "version": "1.0.0",
  "description": "A responsive grid of blog post cards with images, categories, titles, descriptions, authors, and metadata. Perfect for blog homepages and article listings.",
  "tags": ["blog", "cards", "articles", "content", "grid", "posts"],
  "previewImage": "/previews/blog-cards.jpg",
  "schema": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["heading", "posts"],
    "properties": {
      "heading": {
        "type": "string",
        "description": "Main section heading",
        "minLength": 1,
        "maxLength": 100
      },
      "subheading": {
        "type": "string",
        "description": "Optional subheading text",
        "maxLength": 200
      },
      "posts": {
        "type": "array",
        "description": "Array of blog post cards",
        "minItems": 1,
        "maxItems": 12,
        "items": {
          "type": "object",
          "required": ["id", "title", "description", "image", "category"],
          "properties": {
            "id": {
              "type": "string",
              "description": "Unique post identifier"
            },
            "title": {
              "type": "string",
              "description": "Post title",
              "minLength": 1,
              "maxLength": 200
            },
            "description": {
              "type": "string",
              "description": "Post excerpt or summary",
              "maxLength": 500
            },
            "image": {
              "type": "string",
              "description": "Featured image URL",
              "format": "uri"
            },
            "category": {
              "type": "string",
              "description": "Post category/tag"
            },
            "authors": {
              "type": "array",
              "description": "Post authors",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "avatar": {
                    "type": "string",
                    "format": "uri"
                  }
                }
              }
            },
            "date": {
              "type": "string",
              "description": "Publication date",
              "format": "date"
            },
            "readTime": {
              "type": "string",
              "description": "Estimated read time (e.g., '5 min read')"
            },
            "url": {
              "type": "string",
              "description": "Post URL",
              "format": "uri"
            }
          }
        }
      },
      "columns": {
        "type": "object",
        "description": "Grid column configuration per breakpoint",
        "properties": {
          "xs": {
            "type": "number",
            "minimum": 1,
            "maximum": 12
          },
          "sm": {
            "type": "number",
            "minimum": 1,
            "maximum": 12
          },
          "md": {
            "type": "number",
            "minimum": 1,
            "maximum": 12
          },
          "lg": {
            "type": "number",
            "minimum": 1,
            "maximum": 12
          }
        }
      },
      "cardVariant": {
        "type": "string",
        "enum": ["outlined", "elevation", "filled"],
        "description": "Card visual style"
      },
      "showAuthor": {
        "type": "boolean",
        "description": "Display author information"
      },
      "showDate": {
        "type": "boolean",
        "description": "Display publication date"
      },
      "showReadTime": {
        "type": "boolean",
        "description": "Display read time estimate"
      }
    }
  },
