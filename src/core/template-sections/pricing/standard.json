{
  "id": "pricing-standard",
  "name": "Standard Pricing Cards",
  "category": "pricing",
  "version": "1.0.0",
  "description": "Classic pricing table with tier cards",
  "tags": ["pricing", "cards", "tiers"],
  "previewImage": "/previews/pricing-standard.jpg",
  "schema": {
    "type": "object",
    "properties": {
      "heading": {
        "type": "string"
      },
      "subheading": {
        "type": "string"
      },
      "tiers": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "title": {
              "type": "string"
            },
            "price": {
              "type": "string",
              "description": "Price amount (numeric string)"
            },
            "currency": {
              "type": "string",
              "description": "Currency symbol"
            },
            "period": {
              "type": "string",
              "description": "Billing period (e.g., '/month', '/year')"
            },
            "subheader": {
              "type": "string",
              "description": "Optional badge text like 'Recommended'"
            },
            "description": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "List of features included"
            },
            "buttonText": {
              "type": "string"
            },
            "buttonVariant": {
              "type": "string",
              "enum": ["outlined", "contained", "text"]
            },
            "buttonColor": {
              "type": "string",
              "enum": ["primary", "secondary", "info", "success"]
            },
            "highlighted": {
              "type": "boolean",
              "description": "Whether to highlight this tier"
            }
          },
          "required": ["title", "price", "description", "buttonText"]
        },
        "minItems": 2,
        "maxItems": 4
      }
    },
    "required": ["heading", "tiers"]
  },
  "defaultProps": {
    "heading": "Pricing",
    "subheading": "Quickly build an effective pricing table for your potential customers with this layout. It's built with default Material UI components with little customization.",
    "tiers": [
      {
        "title": "Free",
        "price": "0",
        "currency": "$",
        "period": "/month",
        "description": [
          "10 users included",
          "2 GB of storage",
          "Help center access",
          "Email support"
        ],
        "buttonText": "Sign up for free",
        "buttonVariant": "outlined",
        "buttonColor": "primary",
        "highlighted": false
      },
      {
        "title": "Professional",
        "price": "15",
        "currency": "$",
        "period": "/month",
        "subheader": "Recommended",
        "description": [
          "20 users included",
          "10 GB of storage",
          "Help center access",
          "Priority email support",
          "Dedicated team",
          "Best deals"
        ],
        "buttonText": "Start now",
        "buttonVariant": "contained",
        "buttonColor": "secondary",
        "highlighted": true
      },
      {
        "title": "Enterprise",
        "price": "30",
        "currency": "$",
        "period": "/month",
        "description": [
          "50 users included",
          "30 GB of storage",
          "Help center access",
          "Phone & email support"
        ],
        "buttonText": "Contact us",
        "buttonVariant": "outlined",
        "buttonColor": "primary",
        "highlighted": false
      }
    ]
  },
  "slots": {
    "heading": {
      "type": "text",
      "editable": true
    },
    "subheading": {
      "type": "text",
      "editable": true,
      "optional": true
    },
    "tiers": {
      "type": "array",
      "editable": true,
      "itemSchema": {
        "title": { "type": "text", "maxLength": 30 },
        "price": { "type": "text", "pattern": "^[0-9]+$" },
        "currency": { "type": "text", "maxLength": 3 },
        "period": { "type": "text", "maxLength": 20 },
        "subheader": { "type": "text", "maxLength": 30, "optional": true },
        "description": { "type": "array", "items": { "type": "text" } },
        "buttonText": { "type": "text", "maxLength": 30 },
        "buttonVariant": { "type": "select" },
        "buttonColor": { "type": "select" },
        "highlighted": { "type": "boolean" }
      }
    }
  },
  "layout": {
    "container": "centered",
    "maxWidth": "lg",
    "spacing": {
      "pt": { "xs": 4, "sm": 12 },
      "pb": { "xs": 8, "sm": 16 }
    },
    "grid": {
      "xs": 12,
      "sm": 6,
      "md": 4
    }
  },
  "styling": {
    "highlightedCardElevation": 8,
    "defaultCardElevation": 2,
    "badgeIcon": "AutoAwesome"
  },
  "examples": [
    {
      "name": "Annual Pricing",
      "props": {
        "heading": "Simple, Transparent Pricing",
        "subheading": "Save 20% with annual billing. All plans include 14-day free trial.",
        "tiers": [
          {
            "title": "Starter",
            "price": "99",
            "currency": "$",
            "period": "/year",
            "description": [
              "Up to 5 team members",
              "5 GB storage",
              "Basic integrations",
              "Community support"
            ],
            "buttonText": "Start Free Trial",
            "buttonVariant": "outlined",
            "buttonColor": "primary"
          },
          {
            "title": "Business",
            "price": "299",
            "currency": "$",
            "period": "/year",
            "subheader": "Most Popular",
            "description": [
              "Up to 25 team members",
              "50 GB storage",
              "Advanced integrations",
              "Priority support",
              "Custom branding",
              "API access"
            ],
            "buttonText": "Get Started",
            "buttonVariant": "contained",
            "buttonColor": "primary",
            "highlighted": true
          },
          {
            "title": "Enterprise",
            "price": "Custom",
            "currency": "",
            "period": "",
            "description": [
              "Unlimited team members",
              "Unlimited storage",
              "All integrations",
              "24/7 phone support",
              "SSO & SAML",
              "SLA guarantee"
            ],
            "buttonText": "Contact Sales",
            "buttonVariant": "outlined",
            "buttonColor": "primary"
          }
        ]
      }
    }
  ]
}
